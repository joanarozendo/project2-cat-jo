<h1>Add a user</h1>
<form action="/admin/add-user" method="POST">

    <label for="input-firstName">First Name</label>
    <input type="text" id="input-firstName" name="firstName" placeholder="Your first name here" />
    <br>

    <label for="input-lastName">Last Name</label>
    <input type="text" id="input-lastName" name="lastName" placeholder="Your last name here" />
    <br>

    <label for="input-images">Your Profile Image<label>
      <input type="file" id="input-images" name="images" class="form-control"/>
      <br>

    <label for="input-description">About You</label>
    <textarea name="description" id="input-description" cols="30" rows="2">Write something about her/him</textarea>
    <br>

    <label for="input-genres">Favorite genres</label>
    <select name="genres" id="input-genres" multiple>
        <option value="indie">Indie</option>
        <option value="rock">Rock</option>
        <option value="pop">Pop</option>
        <option value="rap">Rap</option>
        <option value="hip-pop">Hip-Pop</option>
        <option value="metal">Metal</option>
        <option value="fado">Fado</option>
    </select>
    <br>

    <label for="input-username">Username</label>
    <input type="text" id="input-username" name="username" placeholder="Your username here" />
    <br>

    <label for="input-email">Email</label>
    <input type="email" id="input-email" name="email" placeholder="Your email" />
    <br>

    <label for="input-password">Password</label>
    <input type="password" name="password" id="input-password" placeholder="Your password here" />
    <br>

    <button>Add user</button>

</form>