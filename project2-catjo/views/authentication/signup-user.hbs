<div id="fullViewDiv">
  <form action="/authentication/signup-user" method="POST" class="light-text" enctype="multipart/form-data">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="input-email">Email</label>
        <input type="email" class="form-control" id="input-email" name="email" placeholder="abc@def.com" required>
      </div>

      <div class="form-group col-md-6">
        <label for="input-password">Password</label>
        <input type="password" {{!-- pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and 8 or more characters" --}} class="form-control" id="input-password" name="passwordHash" placeholder="Password" required>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="input-passRecoveryQuestion">Password recovery question: What's your favorite song?<label>
        <input type="text" id="input-passRecoveryQuestion" name="passRecoveryQuestion" class="form-control"
              placeholder="Your answer" />
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="input-images">Your Profile Image<label>
            <input type="file" id="input-images" name="images" class="form-control" />
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="input-username">Username</label>
        <input type="text" pattern="[^ \x22]+" title="Mustn't contain spaces" maxlength="8" class="form-control" id="input-username" name="username" placeholder="jane_doe" required>
      </div>

      <div class="form-group col-md-4">
        <label for="input-firstName">First Name</label>
        <input type="text" class="form-control" id="input-firstName" name="firstName" placeholder="Jane">
      </div>

      <div class="form-group col-md-4">
        <label for="input-lastName">Last Name</label>
        <input type="text" class="form-control" id="input-lastName" name="lastName" placeholder="Doe">
      </div>

    </div>

    <div class="form-group">
      <label for="input-description">About you</label>
      <textarea name="description" class="form-control" id="input-description" rows="2"
        placeholder="Write something here..."></textarea>
    </div>

    <div class="form-group">
      <label for="input-genres">Choose your favorite genres</label>
      <select name="genres" class="form-control" id="input-genres" multiple>
        <option value="indie">Indie</option>
        <option value="rock">Rock</option>
        <option value="pop">Pop</option>
        <option value="rap">Rap</option>
        <option value="hip-pop">Hip-Pop</option>
        <option value="metal">Metal</option>
        <option value="fado">Fado</option>
      </select>
    </div>

    <div class="form-group">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="gridCheck" required>
        <label class="form-check-label" for="gridCheck">
          I accept the Terms and Conditions
        </label>
      </div>
    </div>

    <button type="submit" class="my-btn btn btn-primary">Sign Up</button>

  </form>
  <div>
    <a href="/authentication/spotify" class='spotify_sign_up'>Sign up with Spotify</a>
  </div>
</div>