<form action="/authentication/signup-artist" method="POST" class="light-text" enctype="multipart/form-data">

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="input-email">Email</label>
      <input type="email" class="form-control" id="input-email" name="email" placeholder="abc@def.com" required>
    </div>

    <div class="form-group col-md-6">
      <label for="input-password">Password</label>
      <input type="password" {{!-- pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
        title="Must contain at least one number and one uppercase and lowercase letter, and 8 or more characters" --}}
        class="form-control" id="input-password" name="passwordHash" placeholder="Password" required>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="input-passRecoveryQuestion">Password recovery question: What's your favorite song?<label>
          <input type="text" id="input-passRecoveryQuestion" name="passRecoveryQuestion" class="form-control"
            placeholder="Your answer" />
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="input-images">Your Profile Image<label>
          <input type="file" id="input-images" name="images" class="form-control" />
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-4">
      <label for="input-username">Username</label>
      <input type="text" class="form-control" id="input-username" name="username" placeholder="xpto_10" required>
    </div>

    <div class="form-group col-md-4">
      <label for="input-artistName">Artist/Band Name</label>
      <input type="text" class="form-control" id="input-artistName" name="artistName" placeholder="XPTO">
    </div>

    <div class="form-group col-md-4">
      <label for="input-bandWebsite">Your Spotify Page</label>
      <input type="url" class="form-control" id="input-bandWebsite" name="bandWebsite" placeholder="xpto.pt">
    </div>

  </div>

  <div class="form-group">
    <label for="input-description">About you</label>
    <textarea name="description" class="form-control" id="input-description" rows="2"
      placeholder="Write something here..."></textarea>
  </div>

  <div class="form-group">
    <label for="input-genres">Choose the genres that apply</label>
    <select name="genres" class="form-control" id="input-genres" multiple>
      <option value="indie">Indie</option>
      <option value="rock">Rock</option>
      <option value="pop">Pop</option>
      <option value="rap">Rap</option>
      <option value="hip-pop">Hip-Pop</option>
      <option value="metal">Metal</option>
      <option value="fado">Fado</option>
    </select>
  </div>

  <div class="form-group">
    <label for="input-artistAlbums">List your albums</label>
    <textarea name="artistAlbums" class="form-control" id="input-artistAlbums" rows="2"
      placeholder="List your albums here..."></textarea>
  </div>

  <div class="form-group">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" id="gridCheck" required>
      <label class="form-check-label" for="gridCheck">
        I accept the Terms and Conditions
      </label>
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Sign Up</button>

</form>