<div class="center">
  <h1>Band profile</h1>
  {{!-- {{#each band.images}} --}}
  <img src={{band.images.0.resizedUrl}}>
  {{!-- {{/each}} --}}
  <h2>{{band.artistName}}</h2>
  <ul>Genre:
    {{#each band.genres}}
    <li>{{this}}</li>
    {{/each}}
  </ul>
  <div>Description: {{band.description}}</div>
  <div>Our Spotify Page: <a href="{{band.bandWebsite}}" target="blank">HERE</a></div>
  {{!-- <div>Recovery Q: {{band.passRecoveryQuestion}}</div> --}}
  <div><a href="/events/{{band.id}}">Events</a></div>

  {{#ifUser user}}
  <span>Want to get in touch with the band? Click <a href="/band/contact-form/{{band.id}}">here</a>.</span>
  <form>
    <label for="artistRating">Rate this band</label>
    <select name="artistRating" id="">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
    <button>Rate</button>
  </form>
  {{/ifUser}}

  {{#ifSameLoggedIn band user}}
  <div><a href="/band/edit/{{band._id}}">Edit</a>
  </div>
  <form action='/band/delete/{{band._id}}' method="POST"><button>Delete your Profile</button></form>
  {{/ifSameLoggedIn}}

  {{#isAdmin user}}
  <div><a href="/band/edit/{{band._id}}">Edit</a>
  </div>
  <form action='/band/delete/{{band._id}}' method="POST">
    <button>Delete this Artist's Profile</button>
  </form>
  {{/isAdmin}}


</div>

<script src='/scripts/band-rate.js'></script>