<ul class="list-unstyled">
  {{#each user}}
  <li>
    <div class="card mb-3" style="max-width: 540px;">
      <div class="row no-gutters">
        <div class="col-md-4">
          {{!-- <img src="..." class="card-img" alt="..."> --}}
          <img src="/images/02.jpg" alt="" width="180px">

        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">{{firstName}} {{lastName}}</h5>
            <p class="card-text">{{description}}</p>
            <a href="/user/profile/{{_id}}" class="card-text"><small class="text-muted">Check out this
                profile</small></a>
          </div>
        </div>
      </div>
    </div>
  </li>
  {{/each}}
</ul>