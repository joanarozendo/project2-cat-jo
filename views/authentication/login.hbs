<div class='center'>

  <form action="/authentication/login" method="POST" class="light-text">
    <h1>Log In</h1>

    <div class="form-group row">
      <label for="input-email" class="col-sm-2 col-form-label">Email</label>
      <div class="col-sm-10">
        <input type="email" class="form-control w-50" id="input-email" name="email" placeholder="Email" required>
        {{#if errorMessageEmail}}
        <div class="alert alert-danger w-50 form-control align-middle" role="alert">
          {{errorMessageEmail}}
        </div>
        {{/if}}
      </div>
    </div>

    <div class="form-group row">
      <label for="input-password" class="col-sm-2 col-form-label">Password</label>
      <div class="col-sm-10">
        <input type="password" class="w-50 form-control" id="input-password" name="password" placeholder="Password"
          required>
        {{#if errorMessagePassword}}
        <div class="alert alert-danger w-50 form-control align-middle" role="alert">
          {{errorMessagePassword}}
        </div>
        {{/if}}
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10">
        <button type="submit" class="my-btn btn btn-primary">Log In</button>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10">
        <span>Forgot your password? Click <a href="/authentication/password-recovery">here</a> to set a new one.</span>
      </div>
    </div>
  </form>
  <div>
    <a href="/authentication/spotify" class='spotify_sign_up'>Sign in with Spotify</a>
  </div>
</div>