

  <form action="/authentication/login" method="POST" class="p-5 m-1 rounded-sm">
    <h1>Sign In</h1>

    <div class="form-group row text-center ">
      <div class="col-sm-10">
        <input type="email" class="form-control w-50" id="input-email" name="email" placeholder="Email" required>
        {{#if errorMessageEmail}}
        <div class="form-control alert-danger w-50 align-middle" role="alert">
          {{errorMessageEmail}}
        </div>
        {{/if}}
      </div>
    </div>

    <div class="form-group row text-center ">
      <div class="col-sm-10">
        <input type="password" class="w-50 form-control" id="input-password" name="password" placeholder="Password"
          required>
        {{#if errorMessagePassword}}
        <div class="form-control alert-danger w-50 align-middle" role="alert">
          {{errorMessagePassword}}
        </div>
        {{/if}}
      </div>
    </div>

    <div class="form-group row ">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-dark border-secondary">Sign In</button>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10">
        <span>Forgot your password? Click <a href="/authentication/password-recovery">here</a> to set a new one.</span>
      </div>
    </div>
     <div>
    <a href="/authentication/spotify" class='btn btn-success border-secondary rounded-sm'>Sign in with Spotify <i class="fa fa-spotify"></i>
</a>
  </div>
  </form>
 
