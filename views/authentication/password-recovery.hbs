<form action="/authentication/password-recovery" method="POST" class="font-weight-bold text-center p-5 m-1 rounded-sm align-middle">
  <h1 class="font-weight-bold">Password Recovery</h1>
  <div class="d-flex flex-column align-content-center">

    <div class='form row d-flex flex-column'>
      <div> <label for="input-email">Email</label></div>
      <div> <input type="email" class="form-control" id="input-email" name="email" placeholder="abc@def.com" required>
      </div>
    </div>

    <div class='form row d-flex flex-column mt-2'>
      <div>
        <label for="input-passRecoveryQuestion">Password recovery question: What's your favorite
          color?<label></div>
      <div>
        <input type="text" id="input-passRecoveryQuestion" name="passRecoveryQuestion" class="form-control"
          placeholder="Your answer" required />
      </div>
    </div>

  </div>

  <button type="submit" class="btn btn-dark border-secondary mt-3">Submit</button>

</form>