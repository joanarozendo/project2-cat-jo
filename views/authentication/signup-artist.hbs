<form action="/authentication/signup-artist" method="POST"
  class="border border-secondary p-5 m-1 rounded-sm font-weight-bold" enctype="multipart/form-data">
  <h1>Sign up</h1>

  <div class="form-row">

    <div class="form-group col-md-4">
      <label for="input-username">Username</label>
      <input type="text" pattern="[^ \x22]+" title="Mustn't contain spaces" maxlength="8" class="form-control"
        id="input-username" name="username" placeholder="jane_doe" required>
    </div>

    <div class="form-group col-md-4">
      <label for="input-artistName">Artist/Band Name</label>
      <input type="text" class="form-control" id="input-artistName" name="artistName" placeholder="XPTO">
    </div>
    <div class="form-group col-md-4">
      <label for="input-email">Email</label>
      <input type="email" class="form-control" id="input-email" name="email" placeholder="abc@def.com" required>
    </div>
  </div>

  <div class="form-row">


    <div class="form-group col-md-4">
      <label for="input-password">Password</label>
      <input type="password" class="form-control" id="input-password" name="passwordHash" placeholder="Password"
        required>
    </div>

    <div class="form-group col-md-4">
      <label for="input-bandWebsite">Your Spotify Page</label>
      <input type="url" class="form-control" id="input-bandWebsite" name="bandWebsite" placeholder="xpto.pt">
    </div>

    <div class="form-group col-md-4">
      <label for="images_upload">Your Profile Image<label>
          <div class="custom-file" name='images_upload'>
            <input type="file" class="custom-file-input" id="input-images" name="images">
            <label class="custom-file-label" for="images">Choose file</label>
          </div>
    </div>
  </div>


  <div class="form-row">

    <div class="form-group col-md-5">
      <label for="input-artistAlbums">List your albums</label>
      <textarea name="artistAlbums" class="form-control" id="input-artistAlbums" rows="2"
        placeholder="List your albums here..."></textarea>
    </div>

    <div class="form-group col-md-5">
      <label for="input-description">About you</label>
      <textarea name="description" class="form-control" id="input-description" rows="2"
        placeholder="Write something here..."></textarea>
    </div>

    <div class="form-group col-md-2">
      <label for="input-genres">Choose your genres</label>
      <select name="genres" class="form-control" id="input-genres" multiple>
        <option value="indie">Indie</option>
        <option value="rock">Rock</option>
        <option value="pop">Pop</option>
        <option value="rap">Rap</option>
        <option value="hip-pop">Hip-Pop</option>
        <option value="metal">Metal</option>
        <option value="fado">Fado</option>
      </select>
    </div>
  </div>


  <div class="form-row">

    <div class="form-group col-md-4">
      <label for="input-password">Password recovery question: What's your favorite song?</label>
      <input type="text" id="input-passRecoveryQuestion" name="passRecoveryQuestion" class="form-control"
        placeholder="Your answer" required>
    </div>
  </div>
  <div class="form-check">
    <input class="form-check-input" type="checkbox" id="gridCheck" required>
    <label class="form-check-label" for="gridCheck">
      I accept the Terms and Conditions
    </label>
  </div>
  <button type="submit" class="btn btn-dark border-secondary mt-1">Sign Up</button>
</form>