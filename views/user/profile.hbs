<div class="p-2 m-0">
      <div class="row mb-3">
      <div class="col-md-4 align-middle">
        <img class="card-img border border-secondary align-middle ml-4 mr-4" src="{{user_individual.images.0.resizedUrl}}" alt="..." style="max-width:350px">
      </div>
      <div class="col-md-8">
        <div class="card-body">
            <h1 class="font-weight-bold card-title">{{user_individual.firstName}} {{user_individual.lastName}}</h1>
            <br>
            <p>About: {{user_individual.description}}</p>
            <br>
            <ul>Favorite genres:
            {{#each user_individual.genres}}
            <li class="text-capitalize">{{this}}</li>
            {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
  <div id="band-profile-card" class="card mb-2 mr-4 ml-4">
    <h5 class="card-header">More</h5>

    <div class="card-body">
      <p class="card-text">Want to get in touch?</p>
      <a href="/form/contact-form/{{user_individual.id}}" class="btn btn-secondary">Contact Me</a>
    </div>

  </div>

  {{#ifSameLoggedIn user_individual user}}
  <h5 class="ml-4">Profile Settings</h5>
  <div id="" class="mb-2 d-flex flex-row mr-4 ml-4 justify-content-around">
      <a href="/user/edit/{{user_individual._id}}" class="btn btn-secondary">Edit your profile</a>
      <form action='/user/delete/{{user_individual._id}}' method="POST">
        <button class="btn btn-secondary">Delete your profile</button>
      </form>
  </div>
  
  {{/ifSameLoggedIn}}

  {{#isAdmin user}}
  <h5 class="">User Profile Settings</h5>
  <div id="d-flex flex-row justify-content-around " class="mb-2">
    <div class="">
      <a href="/user/edit/{{user_individual._id}}" class="btn btn-secondary">Edit this profile</a>
    </div>
    <div class="">
      <form action='/user/delete/{{user_individual._id}}' method="POST">
        <button class="btn btn-secondary">Delete this profile.</button>
      </form>
    </div>
  </div>
  {{/isAdmin}}

</div>